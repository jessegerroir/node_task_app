            <div class='endpoint' id='logout-account'>
                <h4>Logout Account</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="email">Email:</label>
                        <input id='logout-account-input-email' type="text" name="email" required minlength="4" maxlength="80" size="10" value="fake@email.com">
                        <label for="password">Password:</label>
                        <input id='logout-account-input-password' type="text" name="password" required minlength="4" maxlength="80" size="10" value="pass123!!!">
