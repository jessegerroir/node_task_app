    <body>
        <div class="main-content">

            <h1>Task Manager API</h1>

            <p>This is a simple interface to test and use the API. Click the buttons to different actions.</p>

            
            <div class='endpoint' id='create-new-account'>
                <h4>Create New Account</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="name">Name:</label>
                        <input id='create-new-account-input-name'type="text" name="name" required size="10" value="Jay">
                        <label for="age">Age:</label>
                        <input id='create-new-account-input-age'type="text" name="age" size="10" value="32">
                        <label for="email">Email:</label>
                        <input id='create-new-account-input-email' type="text" name="email" required size="10" value="fake@email.com">
                        <label for="password">Password:</label>
                        <input id='create-new-account-input-password' type="text" name="password" required size="10" value="pass123!!!">
                    </div>
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>
                <div class='action'>
                    <button id="create-new-account-button">Create</button>
                </div>    
            </div>

            
            <div class='endpoint' id='login-account'>
                <h4>Login Account</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="email">Email:</label>
                        <input id='login-account-input-email' type="text" name="email" required minlength="4" maxlength="80" size="10" value="fake@email.com">
                        <label for="password">Password:</label>
                        <input id='login-account-input-password' type="text" name="password" required minlength="4" maxlength="80" size="10" value="pass123!!!">
                    </div>    
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id="login-account-button">Login</button>
                </div>  
            </div>

            
            <div class='endpoint' id='get-account'>
                <h4>View Account Information</h4>
                <div class='input-output'>
                    <div class='input'>
                    </div>  
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id="get-account-button">View</button>
                </div>                    
            </div>

            
            <div class='endpoint' id='update-account'>
                <h4>Update Account Information</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="name">Name:</label>
                        <input id='update-account-input-name' type="text" name="name" size="10">
                        <label for="age">Age:</label>
                        <input id='update-account-input-age' type="text" name="age" size="10">
                        <label for="email">Email:</label>
                        <input id='update-account-input-email' type="text" name="email" size="10">
                    </div> 
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id="update-account-button">Update</button>
                </div>    
            </div>

            
