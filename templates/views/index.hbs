            <div class='endpoint' id='create-task'>
                <h4>Create Task</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="name">Name:</label>
                        <input id='create-task-input-name'type="text" name="name" required minlength="4" maxlength="80" size="10" value="Return books">
                        <label for="description">Description:</label>
                        <input id='create-task-input-description' type="text" name="description" required minlength="4" maxlength="80" size="10" value="Return books to library">
                        <label for="completed">Completed:</label>
                        <input id='create-task-input-completed' type="text" name="completed" required minlength="4" maxlength="80" size="10" value="false">
                    </div>    
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id='create-task-button'>Create</button>
                </div>  
            </div>

            
            <div class='endpoint' id='get-task'>
                <h4>View Assigned Tasks</h4>
                <div class='input-output'>
                    <div class='input'>
                    </div>      
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id='get-task-button'>View</button>
                </div>
            </div>

            
            <div class='endpoint' id='update-task'>
                <h4>Update Task</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="id">Id:</label>
                        <input id='update-task-input-id'type="text" name="id" required minlength="0" maxlength="80" size="10">
                        <label for="description">Description:</label>
                        <input id='update-task-input-description' type="text" name="description" required minlength="4" maxlength="80" size="10">
                        <label for="completed">Completed:</label>
                        <input id='update-task-input-completed' type="text" name="completed" required minlength="4" maxlength="80" size="10">
                    </div>    
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id='update-task-button'>Update</button>
                </div> 
            </div>

            
            <div class='endpoint' id='delete-task'>
                <h4>Delete Task</h4>
                <div class='input-output'>
                    <div class='input'>
                        <label for="id">Id:</label>
                        <input id='delete-task-input-id'type="text" name="id" required minlength="0" maxlength="80" size="10">
                    </div>    
                    <div class='output'>
                        <textarea></textarea>
                    </div>
                </div>    
                <div class='action'>
                    <button id='delete-task-button'>Delete</button>
                </div> 
            </div>


